<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">

	<!-- Main frame -->

	<Frame name="MusicianMIDI_Frame" inherits="MusicianDialogTemplate" enableKeyboard="true">

		<Size x="235" y="70" />

		<Layers>
			<Layer level="BACKGROUND">

				<!-- Main title -->

				<FontString name="$parentTitle" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-15"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>

			<!-- Live play button -->

			<Button name="$parentLiveModeButton" inherits="MusicianLEDTextButtonTemplate">
				<Size x="105" y="24" />
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT" y="-30" x="15" />
				</Anchors>
				<Scripts>
					<OnLoad inherit="append">
						self:SetText(Musician.Msg.LIVE_MODE)
						self.led:SetVertexColor(.33, 1, 0, 1)
					</OnLoad>
				</Scripts>
			</Button>

			<!-- Band sync play button -->

			<Button name="$parentBandSyncButton" inherits="MusicianBandPlayButtonTemplate">
				<Size x="60" y="24" />
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT"  y="-30" x="-15" />
				</Anchors>
				<Scripts>
					<OnClick inherit="append">
						Musician.Live.ToggleBandSyncMode()
					</OnClick>
					<OnLoad inherit="append">
						self.count:SetPoint("CENTER", self, "TOPRIGHT", -4, -4)
						self.tooltipText = Musician.Msg.LIVE_SYNC
					</OnLoad>
				</Scripts>
			</Button>
		</Frames>

		<Scripts>
			<OnLoad inherit="prepend">
				MusicianMIDI_FrameTitle:SetText(MusicianMIDI.Msg.LIVE_MIDI_TITLE)
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
